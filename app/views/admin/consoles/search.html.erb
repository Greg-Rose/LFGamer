<div class="row console-search-results">
  <% if @searched_console.empty? %>
    <div class="col-md-12">
      <p class="text-center">No console was found matching your search.</p>
    </div>
  <% end %>

  <%= form_tag(admin_console_search_path, method: "post", class: "navbar-form navbar-left") do %>
    <div class="input-group">
      <%= text_field_tag :name, params[:name], class: "form-control", id: "add-console-name" %>
    </div>

    <div class="input-group">
      <%= text_field_tag :abbreviation, params[:abbreviation], placeholder: "(Optional)", class: "form-control", id: "add-console-abbreviation" %>
    </div>

    <div class="input-group">
      <%= button_tag("Add Console", type: "submit", name: nil, class: "btn btn-default", id: "search-btn") %>
    </div>
  <% end %>
</div>
