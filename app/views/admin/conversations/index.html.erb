<div class="row admin-conversations">
  <div class="col-xs-12">
    <%= link_to "#", class: "btn btn-lg admin-back-btn" do %>
      <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
    <% end %>
  </div>

  <div class="col-xs-12 col-sm-10 col-sm-offset-1 conversations-table-div">
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <tr>
          <th class="text-center">#</th>
          <th class="text-center">Sender</th>
          <th class="text-center">Recipient</th>
          <th class="text-center"># of Messages</th>
          <th class="text-center">Created At</th>
        </tr>
        <%= render partial: "conversation", collection: @conversations %>
      </table>
    </div>
    <%= will_paginate @conversations, class: "text-center pagination-links" %>
  </div>
</div>
