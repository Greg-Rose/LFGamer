<div class="row admin-games">
  <div class="col-xs-12">
    <%= link_to "#", class: "btn btn-lg admin-back-btn" do %>
      <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
    <% end %>
  </div>

  <div class="col-xs-12 col-sm-10 col-sm-offset-1 games-table-div">
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <tr>
          <th class="text-center">#</th>
          <th class="text-center">Name</th>
          <th class="text-center"># of Consoles</th>
          <th class="text-center"># of Users</th>
          <th class="text-center">Multiplayer Type(s)</th>
          <th class="text-center">Created At</th>
        </tr>
        <%= render partial: "game", collection: @games %>
      </table>
    </div>
    <%= will_paginate @games, class: "text-center pagination-links" %>
  </div>
</div>
