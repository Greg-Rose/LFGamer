<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-labelledby="userModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>
        </button>
        <h3 class="modal-title" id="userModalLabel"><%= @user.username %></h3>
        - <%= link_to "Profile", profile_path(@user.profile), target: "_blank" %>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-6 modal-users-name">
            <span>First Name:</span> <%= @user.first_name %>
          </div>
          <div class="col-xs-6 modal-users-name">
            <span>Last Name:</span> <%= @user.last_name %>
          </div>

          <div class="col-xs-12 modal-email">
            <span>Email:</span> <%= @user.email %>
          </div>
        </div>

        <div class="row text-center">
          <div class="col-xs-6 col-sm-3">
            <div class="modal-count-stats">
              <h5>Games</h5>
              <span class="count"><%= @user.games.count %></span>
            </div>
          </div>

          <div class="col-xs-6 col-sm-3">
            <div class="modal-count-stats">
              <h5>Consoles</h5>
              <span class="count"><%= @user.consoles.count %></span>
            </div>
          </div>

          <div class="col-xs-6 col-sm-3">
            <div class="modal-count-stats">
              <h5>Ownerships</h5>
              <span class="count"><%= @user.ownerships.count %></span>
            </div>
          </div>

          <div class="col-xs-6 col-sm-3">
            <div class="modal-count-stats">
              <h5>LFGs</h5>
              <span class="count"><%= @user.lfgs.count %></span>
            </div>
          </div>

          <div class="col-md-6">
            <h5>Account Status (<span class="active">Active</span>/<span class="deleted">Deleted</span>):</h5>
            <% if @user.deleted_at %>
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              <%= @user.deleted_at.in_time_zone("Eastern Time (US & Canada)").strftime("%b %e, %Y %r EST") %>
            <% else %>
              <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            <% end %>
          </div>

          <div class="col-md-6">
            <h5>Admin:</h5>
            <% if @user.admin? %>
              <span class="active">Yes</span>
            <% else %>
              <span class="deleted">No</span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
