<div class="row my-lfgs">
  <div class="col-md-12">
    <h3 class="text-center">My LFGs</h3>
  </div>
  <div class="col-md-12">
    <% if @lfgs.any? %>
      <table class="table table-striped table-bordered">
        <tr>
          <th class="text-center">
            <div>
              <span class="lfg-game-console">Game - Console</span>
            </div>
          </th>
          <th class="text-center"><span class="lfgs-specifics-header">Specifics</span></th>
          <th class="text-center"><span class="lfg-when">When</span></th>
        </tr>
        <%= render partial: "lfg", collection: @lfgs %>
      </table>
    <% else %>
      <p class="text-center">You don't have any active LFGs.</p>
    <% end %>
  </div>
</div>
