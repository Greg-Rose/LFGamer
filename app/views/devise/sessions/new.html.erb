<div class="row devise-forms">
  <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
    <h2 class="col-md-12">Sign In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group col-md-12">
        <%= f.label :login, class: "sr-only" %>
        <div class="input-group">
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-user"></span>
          </div>
          <%= f.text_field :login, autofocus: true, placeholder: "Username or Email", class: "form-control" %>
        </div>
      </div>

      <div class="form-group col-md-12">
        <%= f.label :password, class: "sr-only" %>
        <div class="input-group">
          <div class="input-group-addon">
            <span class="glyphicon glyphicon-lock"></span>
          </div>
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "form-control" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group col-md-12">
          <%= f.label :remember_me, class: "checkbox-inline" do %>
            <%= f.check_box :remember_me %>
            Remember Me
          <% end %>
        </div>
      <% end -%>

      <div class="form-group col-md-12">
        <%= f.submit "Sign In", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>

    <div class="col-md-12">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
