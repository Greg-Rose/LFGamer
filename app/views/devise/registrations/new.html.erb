<div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 col-lg-6 col-lg-offset-3 sign-up">
  <h2 class="col-md-12">Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group col-md-6">
      <%= f.label :first_name, "First Name" %>
      <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= f.label :last_name, "Last Name" %>
      <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
    </div>

    <div class="form-group col-md-12">
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: "Username", class: "form-control" %>
    </div>

    <div class="form-group col-md-12">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
    </div>

    <div class="form-group col-md-12">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group col-md-12">
      <%= f.label :password_confirmation, "Password Confirmation" %>
      <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group col-md-12">
      <%= f.submit "Sign Up", class: "btn btn-success btn-lg btn-block" %>
    </div>
  <% end %>

  <div class="col-md-12">
    <%= render "devise/shared/links" %>
  </div>
</div>
