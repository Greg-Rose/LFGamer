<div class="row devise-forms">
  <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <h2 class="col-md-12">Sign Up</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group col-md-6">
            <%= f.label :first_name, "First Name", class: "form-first-name" %>
            <%= f.text_field :first_name, placeholder: "First Name", class: "form-control" %>
          </div>

          <div class="form-group col-md-6">
            <%= f.label :last_name, "Last Name", class: "form-last-name" %>
            <%= f.text_field :last_name, placeholder: "Last Name", class: "form-control" %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label :username, class: "form-username" %>
            <%= f.text_field :username, placeholder: "Username", class: "form-control" %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label :email, class: "form-email" %>
            <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label :password, class: "form-new-pw" %>
            <%= f.password_field :password, placeholder: "Password", autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group col-md-12">
            <%= f.label :password_confirmation, "Password Confirmation", class: "form-new-pw" %>
            <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", autocomplete: "off", class: "form-control" %>
          </div>

          <div class="form-group col-md-12">
            <%= f.submit "Sign Up", class: "btn btn-success btn-lg btn-block" %>
          </div>
        <% end %>

        <div class="col-md-12">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
