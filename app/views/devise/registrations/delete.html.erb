<div class="row devise-forms">
  <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
    <h3 class="col-md-12">Delete My Account</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :delete }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group col-xs-12 col-sm-12 col-md-12">
        <%= f.label :current_password, "Current Password" %>
        <%= f.password_field :current_password,  autocomplete: "off", placeholder: "Current Password", class: "form-control" %>
      </div>

      <div class="form-group col-xs-12 col-sm-12 col-md-12">
        <%= f.submit "Delete Account", data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm btn-block" %>
      </div>
    <% end %>

    <div class="col-md-12">
      <%= link_to "Back to My Account", edit_user_registration_path %>
    </div>
  </div>
</div>
