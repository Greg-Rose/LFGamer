<div class="row profile">
  <div class="col-sm-6 col-md-4 col-md-offset-1 col-lg-3 col-lg-offset-1 text-center">
    <h2><%= @profile.user.username %></h2>
    <%= link_to "Edit Profile", edit_profile_path %>
  </div>

  <div class="col-sm-6 col-md-4 col-md-offset-1 col-lg-4 col-lg-offset-1 text-center">
    <div class="about-me">
      <% if @profile.about_me %>
        <div class="col-lg-12">
          <h5>About Me</h5>
          <p><%= @profile.about_me %></p>
        </div>
      <% end %>
    </div>
    <div class="gaming-names">
      <% if @profile.psn_id && @profile.psn_id_public? %>
        <div class="col-lg-6">
          <h5>PSN ID</h5>
          <p><%= @profile.psn_id %></p>
        </div>
      <% end %>

      <% if @profile.xbox_gamertag && @profile.xbox_gamertag_public? %>
        <div class="col-lg-6">
          <h5>Xbox Gamertag</h5>
          <p><%= @profile.xbox_gamertag %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
